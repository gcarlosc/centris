        <div class='col-md-12 col-lg-12 size-adaptable'>
            <%= simple_form_for @product do |f| %>
                <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-10">
                    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <h4>Nuevo Producto</h4>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-6">
                            <%= submit_tag 'Guardar', class: 'btn btn-info' %>
                        </div>
                     </div>
                     <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <%= link_to 'Listar', products_path, class: 'btn btn-warning' %>
                     </div>
                 </div>

                <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-9 col-lg-9 border-form">
                    <div class="form-horizontal col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                            <div class="form-group">
                                <label for="exampleInputName2">Nombre</label>
                                <%= f.input :name, label: false, input_html: { class: 'form-control' } %>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName2">Unidad</label>
                                <%= f.input :unit_id, collection: Unit.all, label_method: :name, value_method: :id, label: false, include_blank: 'Elija una unidad...', input_html: { class: 'form-control js-example-basic-single' } %>
                            </div>
                            <div class="form-group">
                                <label>Descripcion</label>
                                <%= f.input :description_id, collection: Description.all, label_method: lambda { |description| "#{description.brand} / #{description.sub_brand}" }, value_method: :id, label: false, include_blank: 'Elija una categoria...', input_html: { class: 'form-control js-example-basic-single' } %>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-5 col-lg-offset-2 col-lg-5">
                            <div class="form-group">
                              <label for="exampleInputName2">Categoria</label>
                              <%= f.input :category_product_id, collection: CategoryProduct.all.categories, label_method: :name, value_method: :id, label: false, include_blank: 'Elija una categoria...', input_html: { class: 'form-control js-example-basic-single' } %>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName2">Clasificacion</label>
                                <%= f.input :classification_id, collection: Classification.all, label_method: :name, value_method: :id, label: false, include_blank: 'Elija una clasificacion...', input_html: { class: 'form-control js-example-basic-single' } %>
                            </div>
                            <div class="form-group">
                                <%= link_to "Descripcion", new_description_path, remote: true, class: "btn btn-primary" %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
