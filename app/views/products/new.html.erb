    <section class="wrapper">
        <%= simple_form_for @product do |f| %>
            <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-10">
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                        <h4>Nuevo Producto</h4>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-6">
                        <%= submit_tag 'Guardar', class: 'btn btn-info' %>
                    </div>
                 </div>
                 <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                    <%= link_to 'Listar', products_path, class: 'btn btn-warning' %>
                 </div>
             </div>

            <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-9 col-lg-9 border-form">
                <div class="form-horizontal col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                        <div class="form-group">
                            <label for="exampleInputName2">Nombre</label>
                            <%= f.input :name, label: false %>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputName2">Unidad</label>
                            <%= f.input :unit_id, collection: Unit.all, label_method: :name, value_method: :id, label: false, include_blank: 'Elija una unidad...' %>
                        </div>
                        <div class="form-group">
                          <label for="exampleInputName2">Categoria</label>
                          <%= f.input :category_product_id, collection: CategoryProduct.all.categories, label_method: :name, value_method: :id, label: false, include_blank: 'Elija una categoria...' %>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-5 col-lg-offset-2 col-lg-5">
                        <div class="form-group">
                            <%= link_to 'Nueva descripcion' %>
                            <label for="exampleInputName2">Descripcion(marca y modelo)</label>
                            <%= f.input :description_id, collection: Description.all, label_method: :name, value_method: :id, label: false, include_blank: 'Elija una descripcion...' %>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputName2">Clasificacion</label>
                            <%= f.input :classification_id, collection: Classification.all, label_method: :name, value_method: :id, label: false, include_blank: 'Elija una clasificacion...' %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </section>
