<section class="wrapper">
  <div class="col-xs-12 col-md-12 col-md-12 col-lg-12 size-adaptable">
    <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-10">
      <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
          <h4>* Listado de Productos</h4>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-9 col-lg-9">
      <table class="table table-bordered">
        <thead>
            <tr>
            <th>Codigo Producto</th>
            <th>Nombre</th>
            <th>Categoria Producto</th>
            <th>Clasificacion</th>
            <th>*</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= CategoryProduct.find(product.category_product_id).name %></td>
            <td><%= Classification.find(product.classification_id).name %></td>
            <td class="provider-list">+</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
