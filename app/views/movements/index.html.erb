<div class="col-xs-12 col-md-12 col-md-12 col-lg-12 size-adaptable">
  <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-10">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
      <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
        <h4>Historial de Movimientos</h4>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-9 col-lg-10">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Creador</th>
          <th>Responsable</th>
          <th>Tipo</th>
          <th>Origen</th>
          <th>Destino</th>
          <th>Fecha de Creacion</th>
          <th>Estado</th>
        </tr>
      </thead>
      <tbody>
        <% @movements.each do |movement| %>
          <tr>
            <td><%= movement.creator.fullname %></td>
            <td><%= User.find(movement.responsable_id).fullname.capitalize %></td>
            <td><%= movement.movement_type.name %></td>
            <td>
              <% if movement.movement_type_id == 1 %>
                <%= Supplier.find(movement.originable_id).name.capitalize %></td>
              <% else %>
                <%= Warehouse.find(movement.originable_id).name.capitalize %></td>
              <% end %>
            </td>
            <td>
              <% if movement.movement_type_id == 5 %>
                <%= Supplier.find(movement.destinable_id).name.capitalize %></td>
              <% else %>
                <%= Warehouse.find(movement.destinable_id).name.capitalize %></td>
              <% end %>
            </td>
            <td><%= movement.created_at.to_date %></td>
            <td><%= movement.status.capitalize %></td>
              <td><%= link_to 'visualizar', movement %></td>
              <% if movement.pending? %>
              <td><%= link_to 'editar', edit_movement_path(movement, type: movement.movement_type_id) %></td>
              <td><%= link_to 'eliminar', movement, method: 'delete', data: { confirm: 'Desea eliminar el movimiento?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

