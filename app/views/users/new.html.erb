  <div>
    <div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-6 col-lg-offset-2 col-lg-6 border-form">
      <%= simple_form_for @user do |f| %>
        <% if @user.errors.any? %>
          <%= pluralize(@user.errors.count, "error") %> prevented your account from being created:
          <ul>
            <% @user.errors.full_messages.each do |error_message| %>
              <li><%= error_message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="form-group">
          <%= f.input :fullname %>
        </div>
        <div class="form-group">
          <%= f.input :phone %>
        </div>
        <div class="form-group">
          <%= f.input :email %>
        </div>
        <div class="form-group">
          <%= f.input :password %>
        </div>
        <div class="form-group">
          <%= submit_tag "Crear", class: 'btn btn-block btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
