<div class="col-xs-12 col-md-12 col-md-12 col-lg-12 size-adaptable">
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <h4>* Stock Por Producto</h4>
    </div>
  </div>

  <% @warehouses.each do |warehouse| %>
    <table class="display table table-bordered table-striped">
      <tbody>
        <tr>
          <td>Almacen: <%= warehouse.name %></td>
        </tr>
        <% warehouse.products.each do |product| %>
          <tr>
            <td>
              <%= product.name.upcase %> | Stock: <%= Sku.filtered_skus(warehouse, product).by_status([:active, :borrowed]).size %>
            </td>
          </tr>
          <% Sku.filtered_skus(warehouse, product).by_status([:active, :borrowed]).each do |sku| %>
            <tr>
              <td><%= sku.sku %></td>
              <td><%= sku.status %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% end %>

</div>
