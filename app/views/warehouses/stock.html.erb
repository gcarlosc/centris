<div class="col-xs-12 col-md-12 col-md-12 col-lg-12 size-adaptable">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        </div>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 col-md-offset-20">
      <%= link_to 'Exportar PDF', stock_warehouses_path(@warehouses, format: "pdf"), class: 'btn btn-success' %>
    </div>
    <div class="col-sm-12 col-md-12">
        <section class="panel">
            <header class="panel-heading">
            </header>
            <div class="panel-body">
                <div class="adv-table">
                    <table class="display table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Almacen</th>
                                <th>Producto - Stock</th>
                            </tr>
                        </thead>
                        <tbody>
                          <% @warehouses.each do |warehouse| %>
                            <tr>
                              <td><%= warehouse.name %></td>
                              <td>
                                <table>
                                  <tbody>
                                    <% warehouse.products.each do |product| %>
                                      <tr>
                                        <td>
                                          <%= product.name.upcase %> | Stock: <%= Sku.filtered_skus(warehouse, product).by_statuses([0, 1]).size %> | <%= link_to "ver skus", skus_show_warehouses_path(warehouse: warehouse,product: product), remote: true, class: 'label label-success' %>
                                        </td>
                                      </tr>
                                    <% end %>
                                  </tbody>
                                </table>
                              </td>
                            </tr>
                          <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>
