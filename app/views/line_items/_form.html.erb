<%= simple_form_for [@movement, @line_item] do |l| %>
  <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-11 col-lg-11">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <h4>* Productos</h4>
      </div>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
        <div class="panel-body">

              <table class="table" id="editable-sample">
                  <thead>
                      <tr>
                          <th>Producto</th>
                          <th>Cantidad</th>
                          <th>SKU</th>
                          <th>*</th>
                      </tr>
                  </thead>

                <tbody>
                  <tr>
                    <td>
                      <%= l.input :product_id, collection: Product.all, label_method: lambda { |product| "#{product.name} / #{product.description.brand} - #{product.description.sub_brand}" }, value_method: :id, include_blank: 'Elija producto...', label: false %>
                    </td>
                    <td>
                      <%= l.input :quantity, label: false %>
                    </td>
                    <td>
                      <%= link_to "Crear Serial", new_sku_path, remote: true, class: "btn btn-warning" %>
                    </td>

                    <td><%= submit_tag 'Guardar linea', class: 'btn btn-danger' %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
      </div>
  </div>
<% end %>
