<div id="myModal" class="modal fade in">
  <div class="modal-dialog">
    <div class="modal-content">
       <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Crear descripci√≥n</h4>
      </div>
      <div class="modal-body">
        <div class="size-adaptable border-form">
          <%= simple_form_for @description, remote: true do |f| %>
            <div class="form-horizontal">
              <div class="form-group">
                <label>Marca</label>
                <%= f.input :brand, label: false, input_html: { class: 'form-control' } %>
              </div>
              <div class="form-group">
                <label>Modelo</label>
                <%= f.input :sub_brand, label: false, input_html: { class: 'form-control' } %>
              </div>
              <div class="form-group">
                <%= submit_tag 'Guardar', class: 'btn btn-info' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
